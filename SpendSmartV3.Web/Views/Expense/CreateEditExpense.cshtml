
@model SpendSmartV3.Objects.Models.Expense.Expense

@{
    ViewData["Title"] = "CreateEditExpense";
}

<h1>Create / Edit Expenses</h1>

<h4>Expense</h4>
<hr />
<div class="container">
    <div class="row">
        <form asp-action="CreateEditExpenseForm" asp-controller="Expense">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <input type="hidden" asp-for="Id" />
                <div class="col-md-2 my-2">
                    <label asp-for="Value" class="control-label"></label>
                    <input asp-for="Value" class="form-control" placeholder="0" type="number" step="0.01" required />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <div class="col-md-8 my-2">
                    <label asp-for="Discerption" class="control-label"></label>
                    <input asp-for="Discerption" type="text" class="form-control" placeholder="Add a description" required />
                    <span asp-validation-for="Discerption" class="text-danger"></span>
                </div>

                <div class="col-md-2 d-flex align-items-end my-2">
                    <input type="submit" value="Save" class="btn btn-success w-100" />
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-md-12 my-2">
            <a class="btn btn-outline-primary w-100" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<SpendSmartV3.Objects.Models.Expense.Expense>

@{
    ViewData["Title"] = "Expense";
}

<h2>Expenses List</h2>

<div class="row mb-3">
    <div class="col-md-8">
        <input type="text" id="searchTerm" class="form-control" placeholder="Search Expenses" aria-label="Search" />
    </div>
    <div class="col-md-4">
        <a class="btn btn-primary w-100" asp-controller="Expense" asp-action="CreateEditExpense">
            Create / Edit Expense
        </a>
    </div>
</div>

<div class="row mb-3 my-2">
    <div class="col-md-12">
        <h4>Total expenses: $@ViewBag.Expenses</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered" id="expensesTable">
            <thead class="thead-dark">
                <tr>
                    <th class="col-2">Value</th>
                    <th class="col-6">Description</th>
                    <th class="col-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var expense in Model)
                    {
                        <tr>
                            <td>@expense.Value.ToString("C")</td>
                            <td>@expense.Discerption</td>
                            <td class="d-flex justify-content-between">
                                <a class="btn btn-info btn-sm w-50 mx-1" asp-controller="Expense" asp-action="CreateEditExpense" asp-route-id="@expense.Id">
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm w-50 mx-1" asp-controller="Expense" asp-action="DeleteExpense" asp-route-id="@expense.Id">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No expenses found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#searchTerm').on('input', function() {
                var searchTerm = $(this).val();

                $.ajax({
                    url: '@Url.Action("Index")',
                    type: 'GET',
                    data: { searchTerm: searchTerm },
                    success: function (data) {
                        $('#expensesTable tbody').html(data);
                    }
                });
            });
        });
    </script>
}
